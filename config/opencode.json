{
  "$schema": "https://opencode.ai/config.json",

  "_comment": [
    "AI Agency Handbook â€” OpenCode Configuration Template",
    "This is a TEMPLATE. Copy to your project root as opencode.json.",
    "Pair with oh-my-opencode.json for agent orchestration.",
    "Auth: run 'opencode auth login' then select your provider.",
    "Kill switch: Ctrl+C in terminal to stop any agent loop.",
    "",
    "Provider priority: Native API > GitHub Copilot > OpenCode Zen",
    "  - Native (anthropic/, google/): Direct API, best quality",
    "  - Copilot (github-copilot/): Flat-rate fallback via subscription",
    "  - Ollama: Free local models for offline/air-gapped work"
  ],

  "plugin": ["oh-my-opencode@latest", "opencode-antigravity-auth@1.5.1"],

  "provider": {
    "anthropic": {
      "name": "Anthropic",
      "_comment": "The Architect (Opus) + The Intern (Haiku) + Atlas (Sonnet)",
      "models": {
        "claude-opus-4-6": {
          "name": "Claude Opus 4.6 (The Architect)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Atlas / General)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "claude-haiku-4-5": {
          "name": "Claude Haiku 4.5 (The Intern)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        }
      }
    },
    "google": {
      "name": "Google",
      "_comment": "The Librarian (Pro, 2M context) + The Visionary (Flash)",
      "models": {
        "gemini-3-pro": {
          "name": "Gemini 3 Pro (The Librarian)",
          "limit": { "context": 2097152, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "gemini-3-flash": {
          "name": "Gemini 3 Flash (The Visionary)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        }
      }
    }
  }
}
